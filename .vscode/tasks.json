{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "c++ build project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/*/*.cpp",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_ttf",
                "-Wall",
                "-o",
                "${workspaceFolder}/build/osmium"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}